<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listitem_file_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector">

    <FrameLayout
        android:id="@+id/listitem_file_manage_icon_layout"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:padding="16dp">

        <ImageView
            android:id="@+id/listitem_file_manage_icon"
            android:src="@drawable/ic_file_gray_24dp"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/listitem_file_manage_mark"
            android:src="@drawable/ic_check_circle_gray_24dp"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_toRightOf="@+id/listitem_file_manage_icon_layout"
        android:paddingRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listitem_file_manage_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textSize="16sp"
            android:textColor="@color/textColorPrimary"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever" />

        <TextView
            android:id="@+id/listitem_file_manage_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"
            android:textSize="14sp"
            android:textColor="@color/textColorSecondary"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever" />

    </LinearLayout>

    <View
        android:id="@+id/listitem_file_manage_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#E0E0E0" />

</RelativeLayout>