<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/introduce_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="INFO"
        android:textSize="@dimen/wizard_info_text_size" />

    <TextView
        android:id="@+id/introduce_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/introduce_info"
        android:gravity="center"
        android:text="TITLE"
        android:textColor="@android:color/black"
        android:textSize="@dimen/wizard_title_text_size"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/introduce_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/introduce_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_toolbar_info_gray" />


</RelativeLayout>
