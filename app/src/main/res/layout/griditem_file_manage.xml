<?xml version="1.0" encoding="utf-8"?>
<com.transcend.nas.common.SquareRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/griditem_file_manage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector">

    <ImageView
        android:id="@+id/griditem_file_manage_icon"
        android:src="@drawable/ic_file_gray_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/griditem_file_manage_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#80FFFFFF"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/textColorPrimary"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever" />

</com.transcend.nas.common.SquareRelativeLayout>