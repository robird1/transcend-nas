<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/introduce_image"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_logo_storejetcloud_big" />

    <TextView
        android:id="@+id/introduce_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/introduce_image"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="@string/introduce_welcome"
        android:textColor="@android:color/black"
        android:textSize="@dimen/wizard_title_text_size"
        android:textStyle="bold" />

</RelativeLayout>
