<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>"
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorPrimary</item>
        <item name="android:itemTextAppearance">@style/AppTheme.WhiteItemTextStyle</item>
        <item name="alertDialogTheme">@style/AppDialog</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorAccent</item>
        <item name="actionModeCloseDrawable">@drawable/ic_toolbar_close_white</item>
    </style>

    <style name="AppDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorAccent">@color/colorAccentDialog</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonNegative</item>
    </style>

    <style name="FirmwareDialog" parent="AppDialog">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AlertDialogButtonNegative" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="AppTheme.WhiteItemTextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.DropDown" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:textColorSecondary">@color/colorPrimary</item>
        <item name="android:itemBackground">@drawable/menu_selector</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.MusicPlayer">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorRadioButtonUnCheck</item>
        <item name="colorControlActivated">@color/colorRadioButtonCheck</item>
    </style>

    <style name="AppTheme.SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/app_launch</item>
    </style>

</resources>
